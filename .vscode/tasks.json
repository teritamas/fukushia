{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm run dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Format Backend (ruff)",
      "type": "shell",
      "command": "cd application && uv sync --dev && uv run ruff format .",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Format Frontend (prettier)",
      "type": "shell",
      "command": "cd frontend && npm install --save-dev prettier && npx prettier --write .",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "uv run backend",
      "type": "shell",
      "command": "uv run uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "uv sync",
      "type": "shell",
      "command": "uv sync",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "uv ruff format",
      "type": "shell",
      "command": "uv run ruff format .",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
