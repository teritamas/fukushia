{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm run dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "uv run backend",
      "type": "shell",
      "command": "uv run uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "uv sync",
      "type": "shell",
      "command": "uv sync",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "uv ruff format",
      "type": "shell",
      "command": "uv run ruff format .",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
